{
  "name": "neurolint-vscode",
  "displayName": "NeuroLint",
  "description": "Deterministic code fixing for TypeScript, JavaScript, React, and Next.js",
  "version": "1.0.15",
  "publisher": "neurolint",
  "license": "Apache-2.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Linters",
    "Formatters",
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:javascript",
    "onLanguage:typescriptreact",
    "onLanguage:javascriptreact"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "neurolint.analyzeFile",
        "title": "NeuroLint: Analyze Current File"
      },
      {
        "command": "neurolint.analyzeWorkspace",
        "title": "NeuroLint: Analyze Workspace"
      },
      {
        "command": "neurolint.fixFile",
        "title": "NeuroLint: Fix Current File"
      },
      {
        "command": "neurolint.fixWorkspace",
        "title": "NeuroLint: Fix Workspace"
      },
      {
        "command": "neurolint.migrateReact19",
        "title": "NeuroLint: Migrate to React 19"
      },
      {
        "command": "neurolint.migrateNextjs16",
        "title": "NeuroLint: Migrate to Next.js 16"
      },
      {
        "command": "neurolint.migrateBiome",
        "title": "NeuroLint: Migrate to Biome"
      },
      {
        "command": "neurolint.checkDeps",
        "title": "NeuroLint: Check React 19 Dependencies"
      },
      {
        "command": "neurolint.checkTurbopack",
        "title": "NeuroLint: Check Turbopack Compatibility"
      },
      {
        "command": "neurolint.checkCompiler",
        "title": "NeuroLint: Detect React Compiler Opportunities"
      },
      {
        "command": "neurolint.assessRouter",
        "title": "NeuroLint: Assess Router Complexity"
      },
      {
        "command": "neurolint.detectReact192",
        "title": "NeuroLint: Detect React 19.2 Features"
      },
      {
        "command": "neurolint.simplify",
        "title": "NeuroLint: Simplify Code"
      },
      {
        "command": "neurolint.showLayers",
        "title": "NeuroLint: Show Layer Documentation"
      },
      {
        "command": "neurolint.validate",
        "title": "NeuroLint: Validate Code"
      },
      {
        "command": "neurolint.showStats",
        "title": "NeuroLint: Show Statistics"
      }
    ],
    "configuration": {
      "title": "NeuroLint",
      "properties": {
        "neurolint.apiUrl": {
          "type": "string",
          "default": "https://app.neurolint.dev/api",
          "description": "NeuroLint API URL"
        },
        "neurolint.enabledLayers": {
          "type": "array",
          "default": [1, 2, 3, 4, 5, 6, 7],
          "description": "Enabled analysis layers (1-7)"
        },
        "neurolint.autoFix": {
          "type": "boolean",
          "default": false,
          "description": "Automatically fix issues on save"
        },
        "neurolint.showInlineHints": {
          "type": "boolean",
          "default": true,
          "description": "Show inline hints for issues"
        },
        "neurolint.diagnosticsLevel": {
          "type": "string",
          "enum": ["error", "warning", "info"],
          "default": "warning",
          "description": "Minimum diagnostics level to display"
        },
        "neurolint.timeout": {
          "type": "number",
          "default": 30000,
          "description": "Analysis timeout in milliseconds"
        }
      }
    }
  },
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:edge": "jest --testPathPattern=edge",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.74.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  }
}
